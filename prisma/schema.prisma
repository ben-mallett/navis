generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x", "linux-musl-openssl-3.0.x", "rhel-openssl-1.0.x"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now()) @db.Timestamptz(6)
  email     String    @unique
  password  String  
  name      String 
  role      Role
  devices   Device[]
}

enum Role {
  USER
  ADMIN
}

model Device {
  id              Int       @id @default(autoincrement())
  createdAt       DateTime  @default(now()) @db.Timestamptz(6)
  ipAddress       String
  userId          Int
  user            User      @relation(fields: [userId], references: [id])
  sensorReadings  SensorReading[]  // Define the relationship
}

model SensorReading {
  id        Int       @id @default(autoincrement())
  takenOn   DateTime  @default(now())
  dataType  DataType
  value     Float
  deviceId  Int       // Foreign key to associate with Device
  device    Device    @relation(fields: [deviceId], references: [id])
}

enum DataType {
  TEMPERATURE
  PH
  CONDUCTIVITY
  NITRITES
  NITRATES
  AMMONIA
  ALKALINITY
}
